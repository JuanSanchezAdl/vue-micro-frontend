{
  "name": "vue-micro-frontend",
  "repository": {
    "type": "git",
    "url": "https://github.com/Woukiwoukiwa/vue-micro-frontend.git"
  },
  "author": "domi",
  "version": "0.2.0",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name vue-micro-frontend ./src/index.ts",
    "lint": "vue-cli-service lint",
    "postversion": "yarn publish . --tag $npm_package_version && git push --tags"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-property-decorator": "^8.1.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-typescript": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "lint-staged": "^8.1.5",
    "typescript": "^3.4.3",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
